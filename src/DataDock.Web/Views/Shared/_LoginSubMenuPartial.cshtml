@{
  var userId = User.Identity.Name;
  var returnUrl = "";

}
@if (User.Identity.IsAuthenticated)
{
  <div class="item">
    <div class="header">@userId</div>
    <div class="menu">
      <a class="item" href="/@userId"><i class="dashboard icon"></i> Dashboard</a>
      <a class="item" href="/@userId/import"><i class="upload icon"></i> Add Data</a>
      <a asp-controller="Account" asp-action="Settings" class="item"><i class="user icon"></i> Account</a>
    </div>
  </div>
  <a asp-action="LogOff" asp-controller="Account" class="item" id="logoffLinkSubMenu" asp-route-returnUrl="@returnUrl">Log Off</a>
}
else
{

  <a asp-action="Login" asp-controller="Account" class="item" id="loginLinkSubMenu" asp-route-returnUrl="@returnUrl">Log In</a>
}
