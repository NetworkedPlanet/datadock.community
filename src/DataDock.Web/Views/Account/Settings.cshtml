
@model DataDock.Web.ViewModels.SignUpViewModel

@{
  ViewData["Title"] = "User Account Settings";
}

<div class="ui container">
  <h2>@ViewData["Title"]</h2>
</div>


<div class="ui container">
  
  <form asp-action="Settings">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <input asp-for="MailingList" /> @Html.DisplayNameFor(model => model.MailingList)
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <input asp-for="AgreeTerms" /> @Html.DisplayNameFor(model => model.AgreeTerms)
        </label>
      </div>
    </div>
    <div class="form-group">
      <input type="submit" value="Create" class="btn btn-default" />
    </div>
  </form>

</div>

